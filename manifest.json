{
  "manifest_version": 3,
  "name": "Twitter Info Hider",
  "version": "1.0",
  "description": "Hide names, usernames, profile pictures, and engagement counts on Twitter timeline, reveal on hover. Toggle via popup.",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html"
} 